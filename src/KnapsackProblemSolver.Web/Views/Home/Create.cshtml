@model KnapsackProblemSolver.Web.ViewModels.TaskDetailsViewModel
 @{ ViewBag.Title = "Добавление задачи"; }
<h2>Добавление задачи</h2>
<hr />
<form asp-action="create" asp-controller="home">

    <div class="form-group">
        <div class="form-group col-md-2">
            <label class="control-label">Вместимость рюкзака</label>
        </div>   
    </div>
    <div class="form-group">
        <div class="form-group col-md-3">
            <input type="text" asp-for="MaxWeight" class="form-control">
        </div>
    </div>    
    <div class="form-group row">
        <div class="form-group col-md-3">
         <input type="submit" class="btn btn-primary" value="Создать задачу">
         </div>
    </div>
    
    <div class="form-group row">
        <div class="form-group col-md-3">
            <input type="button" id="additem" value="Добавить предмет" class="btn btn-info">
        </div>
        
    </div>

    <div class="form-group" id="newitems" >

        
    </div>


</form>

@section Scripts {
<script type="text/javascript">
    $("#additem").on('click', function() {

        $.ajax({
            url: '/Home/AddItem',
            success: function(partialView) {
               $('#newitems').append(partialView);
            },
            error: function(a, b, c) {
                console.log(a, b, c);
            }
        });
    });
    
</script>
}